{
  "name": "playwright-bdd",
  "version": "1.0.0",
  "description": "Playwright BDD Framework",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js --require cucumber.js --require features/step_definitions/**/*.js",
    "test:smoke": "cucumber-js --tags @smoke --require cucumber.js --require features/step_definitions/**/*.js",
    "test:parallel": "cucumber-js --parallel 3 --require cucumber.js --require features/step_definitions/**/*.js",
    "test:smoke:parallel": "cucumber-js --tags @smoke --parallel 3 --require cucumber.js --require features/step_definitions/**/*.js"
  },
  "keywords": [
    "playwright",
    "bdd",
    "cucumber"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@cucumber/cucumber": "^9.5.1",
    "@playwright/test": "^1.39.0",
    "faker": "^5.5.3"
  },
  "devDependencies": {
    "@cucumber/pretty-formatter": "^2.4.1"
  }
}
